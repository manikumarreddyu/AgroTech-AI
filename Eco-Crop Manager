            season: "Summer",
            pesticide: "None"
        },
        orange: {
            soil: "Sandy, well-drained soil",
            season: "Summer",
            pesticide: "Insecticide"
        },
        papaya: {
            soil: "Fertile, well-drained soil",
            season: "Summer",
            pesticide: "None"
        },
        peach: {
            soil: "Sandy loam soil",
            season: "Summer",
            pesticide: "Insecticide"
        },
        pear: {
            soil: "Well-drained, sandy soil",
            season: "Summer",
            pesticide: "None"
        },
        pineapple: {
            soil: "Well-drained, sandy soil",
            season: "Summer",
            pesticide: "None"
        },
        strawberry: {
            soil: "Well-drained, fertile soil",
            season: "Spring/Summer",
            pesticide: "None"
        },
        watermelon: {
            soil: "Well-drained, sandy soil",
            season: "Summer",
            pesticide: "Herbicide"
        },

        // Vegetables
        asparagus: {
            soil: "Sandy, well-drained soil",
            season: "Spring",
            pesticide: "Herbicide"
        },
        barley: {
            soil: "Well-drained, light-textured soil",
            season: "Fall/Spring",
            pesticide: "Fungicide"
        },
        bellPepper: {
            soil: "Sandy loam soil with good drainage",
            season: "Summer",
            pesticide: "Insecticide"
        },
        broccoli: {
            soil: "Rich, well-drained soil",
            season: "Fall/Spring",
            pesticide: "Insecticide"
        },
        cabbage: {
            soil: "Rich, well-drained soil",
            season: "Fall",
