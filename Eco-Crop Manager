            soil: "Clayey soil with good water retention",
            season: "Summer",
            pesticide: "Carbofuran"
        },
        spinach: {
            soil: "Fertile, well-drained soil",
            season: "Spring/Fall",
            pesticide: "None"
        },
        tomato: {
            soil: "Well-drained, sandy soil",
            season: "Spring/Summer",
            pesticide: "Chlorantraniliprole"
        },
        sweetPotato: {
            soil: "Loose, well-drained soil",
            season: "Summer",
            pesticide: "None"
        },
        zucchini: {
            soil: "Rich, well-drained soil",
            season: "Summer",
            pesticide: "Herbicide"
        },
        wheat: {
            soil: "Well-drained loamy soil",
            season: "Fall",
            pesticide: "Glyphosate"
        },
    };

    categorySelect.addEventListener('change', () => {
        const selectedCategory = categorySelect.value;
        cropSelect.innerHTML = '<option value="">Select a Crop</option>'; // Reset crop options
        learnAboutButton.disabled = true;

        if (selectedCategory === "fruits") {
            const fruitOptions = ["alfalfa", "artichoke", "basil", "blueberry", "cantaloupe", "chickpea", "grapes", "kiwi", "mango", "orange", "papaya", "peach", "pear", "pineapple", "strawberry", "watermelon"];
            fruitOptions.forEach(crop => {
                cropSelect.innerHTML += `<option value="${crop}">${crop.charAt(0).toUpperCase() + crop.slice(1)}</option>`;
            });
        } else if (selectedCategory === "vegetables") {
            const vegetableOptions = ["asparagus", "barley", "bellPepper", "broccoli", "cabbage", "carrot", "cauliflower", "cotton", "cucumber", "eggplant", "garlic", "herbs", "lettuce", "millet", "oat", "radish", "rice", "spinach", "tomato", "sweetPotato", "zucchini", "wheat"];
            vegetableOptions.forEach(crop => {
                cropSelect.innerHTML += `<option value="${crop}">${crop.charAt(0).toUpperCase() + crop.slice(1)}</option>`;
            });
        }
        cropSelect.disabled = false;
    });

    cropSelect.addEventListener('change', () => {
        learnAboutButton.disabled = cropSelect.value === "";
    });

    learnAboutButton.addEventListener('click', () => {
        const selectedCrop = cropSelect.value;
        if (selectedCrop) {
            const { soil, season, pesticide } = cropData[selectedCrop];
            result.textContent = `Crop: ${selectedCrop.charAt(0).toUpperCase() + selectedCrop.slice(1)}\n` +
                                 `Ideal Soil: ${soil}\n` +
                                 `Best Season: ${season}\n` +
                                 `Common Pesticide: ${pesticide}`;
        } else {
            result.textContent = "Please select a crop to learn more.";
        }
    });
});
